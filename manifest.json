{
  "name": "Cinematographia",
  "version": "0.1.3",
  "description": "Yet another 'Turn Lights Off' plugin, but with extra ability to draw a rectangle of chosen area to focus.",
  "background_page": "background.html",

  "options_page": "options.html",
  "icons" : {"48" : "icon48.png", "128" : "icon128.png"},
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css" : ["main.css"],
      "js"  : ["js/jquery.js", "js/jquery.hotkeys.js", "js/sitescript.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon48.png"
  },
  "permissions": [
    "http://*/*", "https://*/*", "tabs"
  ]

}

